            android:exported="false" />
        <activity
            android:name=".Product_list"
            android:exported="false" />
        <activity
            android:name=".Pay"
            android:exported="false" />
        <activity
            android:name=".Lauth"
            android:exported="false" />
        <activity
            android:name=".CAuth"
            android:exported="false" />
        <activity
            android:name=".VegActivity"
            android:exported="false" />
